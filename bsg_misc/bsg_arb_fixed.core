CAPI=2:

name: ::bsg_arb_fixed:0-r1
description: arb_fixed

filesets:
  rtl:
    files:
      - bsg_misc/bsg_defines.v: {is_include_file : true}
      - bsg_misc/bsg_arb_fixed.v
      - bsg_misc/bsg_priority_encode_one_hot_out.v
      - bsg_misc/bsg_scan.v
    file_type: systemVerilogSource

targets:
  default:
    filesets: [rtl]
  
  lint:
    default_tool: verilator
    filesets: [rtl]
    tools:
      verilator: 
        mode: lint-only
    toplevel: bsg_arb_fixed
    parameters: 
      - inputs_p=2
      - lo_to_hi_p=1

parameters:
  inputs_p:
    datatype : int
    default  : -1
    paramtype: vlogparam
  lo_to_hi_p:
    datatype : int
    default  : -1
    paramtype: vlogparam

provider :
  name : github
  user : bespoke-silicon-group
  repo : basejump_stl
