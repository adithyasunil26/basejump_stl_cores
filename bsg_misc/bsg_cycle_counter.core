CAPI=2:

name: ::bsg_cycle_counter:0-r1
description: cycle_counter

filesets:
  rtl:
    files:
      - bsg_misc/bsg_defines.v: {is_include_file : true}
      - bsg_misc/bsg_cycle_counter.v
    file_type: systemVerilogSource
  
  tb:
    files:
      - testing/bsg_misc/bsg_cycle_counter/test_bsg.v
    file_type: systemVerilogSource

targets:
  default:
    filesets: [rtl]
  
  lint:
    default_tool: verilator
    filesets: [rtl]
    tools:
      verilator: 
        mode: lint-only
    toplevel: bsg_cycle_counter
  
  verilator_tb:
    default_tool: verilator
    filesets: [rtl, tb]
    tools:
      verilator:
        verilator_options: [--trace]
    toplevel: test_bsg

parameters:
  width_p:
    datatype : int
    default  : 32
    paramtype: vlogparam
  init_val_p:
    datatype : int
    default  : 0
    paramtype: vlogparam

provider :
  name : github
  user : bespoke-silicon-group
  repo : basejump_stl