CAPI=2:

name: ::bsg_scan:0-r1
description: priority_encode

filesets:
  rtl:
    files:
      - bsg_misc/bsg_defines.v: {is_include_file : true}
      - bsg_misc/bsg_scan.v
    file_type: systemVerilogSource

targets:
  default:
    filesets: [rtl]
  
  lint:
    default_tool: verilator
    filesets: [rtl]
    tools:
      verilator: 
        mode: lint-only
    toplevel: bsg_scan
    parameters: 
      - width_p=3
      - xor_p=1

parameters:
  width_p:
    datatype : int
    default  : -1
    paramtype: vlogparam
  lo_to_hi_p:
    datatype : int
    default  : 0
    paramtype: vlogparam
  xor_p:
    datatype : int
    default  : 0
    paramtype: vlogparam
  and_p:
    datatype : int
    default  : 0
    paramtype: vlogparam
  or_p:
    datatype : int
    default  : 0
    paramtype: vlogparam
  debug_p: 
    datatype : int
    default  : 0
    paramtype: vlogparam

provider :
  name : github
  user : bespoke-silicon-group
  repo : basejump_stl
