CAPI=2:

name: ::bsg_nonsynth_dpi_gpio:0-r1
description: This module is useful for setting and reading "pins" from C/C++

filesets:
  rtl:
    files:
      - bsg_misc/bsg_defines.v: {is_include_file : true}
      - bsg_test/bsg_nonsynth_dpi_gpio.hpp: { file_type: cppSource ,is_include_file : true} 
      - bsg_test/bsg_nonsynth_dpi_gpio.v
    file_type: systemVerilogSource

targets:
  default:
    filesets: [rtl]
  
  lint:
    default_tool: verilator
    filesets: [rtl]
    tools:
      verilator: 
        mode: lint-only
        verilator_options: [-Wno-WIDTH]
    toplevel: bsg_nonsynth_dpi_gpio
    parameters:
      - width_p=4
      - use_input_p=1

  synth:
    default_tool: yosys
    filesets: [rtl]
    tools:
      yosys:
        arch: ice40
        output_format: json
        yosys_synth_options: [-sv]
    toplevel: bsg_nonsynth_dpi_gpio

parameters:
  width_p:
    datatype : int
    default  : -1
    paramtype: vlogparam
  use_input_p:
    datatype : int
    default  : 0
    paramtype: vlogparam
  use_output_p:
    datatype : int
    default  : 0
    paramtype: vlogparam
  debug_p:
    datatype : int
    default  : 0
    paramtype: vlogparam

provider :
  name : github
  user : bespoke-silicon-group
  repo : basejump_stl