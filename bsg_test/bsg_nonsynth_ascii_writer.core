CAPI=2:

name: ::bsg_nonsynth_ascii_writer:0-r1
description: bsg_nonsynth_ascii_writer

filesets:
  rtl:
    files:
      - bsg_misc/bsg_defines.v: {is_include_file : true}
      - bsg_test/bsg_nonsynth_ascii_writer.v
    file_type: systemVerilogSource

targets:
  default:
    filesets: [rtl]
  
  lint:
    default_tool: verilator
    filesets: [rtl]
    tools:
      verilator: 
        mode: lint-only
    toplevel: bsg_nonsynth_ascii_writer
    parameters:
      - width_p=2
      - values_p=2

  synth:
    default_tool: yosys
    filesets: [rtl]
    tools:
      yosys:
        arch: ice40
        output_format: json
        yosys_synth_options: [-sv]
    toplevel: bsg_nonsynth_ascii_writer

parameters:
  width_p:
    datatype : int
    default  : -1
    paramtype: vlogparam
  values_p:
    datatype : int
    default  : -1
    paramtype: vlogparam
  filename_p:
    datatype : string
    default  : "-1"
    paramtype: vlogparam
  fopen_param_p:
    datatype : string
    default  : "w"
    paramtype: vlogparam
  format_p:
    datatype : string
    default  : "%x "
    paramtype: vlogparam

provider :
  name : github
  user : bespoke-silicon-group
  repo : basejump_stl