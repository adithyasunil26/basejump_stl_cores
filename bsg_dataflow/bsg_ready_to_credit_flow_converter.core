CAPI=2:

name: ::bsg_ready_to_credit_flow_converter:0-r1
description:  This module converts between the valid-ready (input) and valid-credit (output) handshakes, by keeping the count of available credits

filesets:
  rtl:
    files:
      - bsg_misc/bsg_defines.v: {is_include_file : true}
      - bsg_dataflow/bsg_ready_to_credit_flow_converter.v
    file_type: systemVerilogSource
    depend:
      - bsg_counter_up_down_variable

targets:
  default:
    filesets: [rtl]
  
  lint:
    default_tool: verilator
    filesets: [rtl]
    tools:
      verilator: 
        mode: lint-only
        verilator_options: [-Wno-WIDTH]
    toplevel: bsg_ready_to_credit_flow_converter
    parameters: 
      - credit_initial_p=2
      - credit_max_val_p=2

parameters:
  credit_initial_p:
    datatype : int
    default  : -1
    paramtype: vlogparam
  credit_max_val_p:
    datatype : int
    default  : -1
    paramtype: vlogparam
  decimation_p:
    datatype : int
    default  : 1
    paramtype: vlogparam

provider :
  name : github
  user : bespoke-silicon-group
  repo : basejump_stl
